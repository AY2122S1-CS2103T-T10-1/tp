<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<fx:root resizable="false" title="User Profile" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <icons>
        <Image url="@/images/User_Avatar.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@Fonts.css" />
                <URL value="@UserProfileWindow.css" />
            </stylesheets>

            <AnchorPane prefHeight="270" prefWidth="260">
                <children>
                    <VBox>
                        <HBox>
                            <children>
                                <ImageView fx:id="userProfile" fitHeight="260.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-radius: 20;"/>
                                <VBox>
                                    <children>
                                        <GridPane alignment="center" hgap="10" vgap="18">
                                            <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
                                            <Text fx:id="heading" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                                  GridPane.columnSpan="2"/>
                                            <Label fx:id="userName" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                                            <Label fx:id="userTelegram" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                                            <Label fx:id="userGitHub" GridPane.columnSpan="2" GridPane.rowIndex="4"/>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </VBox>
                </children>
            </AnchorPane>
        </Scene>
    </scene>
</fx:root>

